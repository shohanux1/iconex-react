{
  "name": "iconex-monorepo",
  "private": true,
  "scripts": {
    "optimize": "tsx scripts/optimize-svgs.ts",
    "generate": "tsx scripts/generate-icon-data.ts && tsx scripts/generate-react-components.ts && tsx scripts/generate-index.ts",
    "build:core": "pnpm --filter iconex build",
    "build:react": "pnpm --filter iconex-react build",
    "build": "pnpm optimize && pnpm generate && pnpm build:core && pnpm build:react",
    "clean": "pnpm --filter \"./packages/*\" clean",
    "dev:generate": "pnpm optimize && pnpm generate"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "htmlparser2": "^9.1.0",
    "svgo": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
